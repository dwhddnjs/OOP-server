// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id    String   @id @default(uuid()) 
  name  String?
  email String  @unique
  password String
  refreshToken String? @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  packs Pack[] @relation()
  cards Card[] @relation()
  roster Roster[] @relation()
}

model Roster {
  id Int @default(autoincrement()) @id
  title String
  players Player[] @relation()
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([userId])
}

model Player {
  id Int @default(autoincrement()) @id
  nickname String
  position String
  img String
  rosterId  Int
  roster Roster @relation(fields: [rosterId], references: [id])
  @@index([rosterId])
}

model Pack {
  id Int @default(autoincrement()) @id
  label String
  price Int
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([userId])
}

model Card {
  id Int @default(autoincrement()) @id
  image String
  title String
  tier String
  userId String
  user User @relation(fields: [userId], references: [id])
  
  @@index([userId])
}
